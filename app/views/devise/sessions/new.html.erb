<div class="top-buffer"></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well bs-component">
      <legend>Log In</legend>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.label :email, class: "control-label"%><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "" %>
          </div>

          <div class="field form-group">
            <%= f.label :password, class: "control-label"%><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" , placeholder: "" %>
          </div>

          <div class="form-group">
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me, class: "remember"%>
                <%= f.label :remember_me, class: "control-label"%>
              </div>
            <% end -%>
            <%= render "devise/shared/links" %>
          </div>
          <div class="actions">
            <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

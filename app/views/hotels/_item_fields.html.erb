<div class="nested-fields">
	<div class="row">
		<div class="well">
			<div class="form-group">
				<%= f.input :name, input_html: {class: "form-control", placeholder: "Name"}, label: "<span> Item Name </span>".html_safe%>
			</div>
			<div class="form-group">
				<%= f.input :description, input_html: {class: "form-control", placeholder: "Description"}, label: "<span> Item Description </span>".html_safe%>
			</div>
			<div class="form-group">
				<%= f.input :image, input_html: {class: "btn btn-default form-control"}, input: "<span>Select File</span>".html_safe %>
			</div>
			<div class="form-group">
				<%= f.input :price, input_html: {class: "form-control", placeholder: "Price"}, label: "<span> Item Price </span>".html_safe%>
			</div>
			<div class="checkbox">
				<%= f.input :ava , inline_label: 'In Stock'  %>
			</div>
			<%= link_to_remove_association "Remove item", f %>
		</div>
	</div>
</div>